<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground">


    <TextView
        android:id="@+id/textview_recyclerview_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textview_recyclerview_contents" />

    <TextView
        android:id="@+id/textview_recyclerview_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintLeft_toRightOf="@+id/textview_recyclerview_name"
        app:layout_constraintRight_toLeftOf="@+id/textView3"

        />

    <Button
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="like"
        android:textSize="4sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textview_recyclerview_contents"

        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>